---
// Basic Light Testimonial section
// ------------
// Description: A centered testimonial section that contains: a quote, a caption and a cite in a lighter section with a background image or gradient.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Testimonial from '../../ui/TestimonialLight.astro'

// Props
type Props = {
  blockquote?: string
  figcaption?: string
  cite?: string
  bgPosition?: 'left' | 'right' | 'center'
}
const { blockquote, figcaption = 'Chris', cite = '', bgPosition = 'center' } = Astro.props
---

<Section
  id="testimonial"
  mode="dark"
  bgPosition={bgPosition}
  classes="dark:border-t border-y border-primary-500 bg-gradient-to-b from-neutral-100 via-primary-100 to-neutral-100 shadow-xl shadow-primary-500/50"
>
  <Row>
    <Col span="12">
      <Testimonial
        blockquote={blockquote || ''}
        figcaption={figcaption}
        cite={cite}
        align="center"
        size="xl"
        mobileSize="lg"
        classes="!leading-tight font-bold xl:text-3xl max-w-4xl mx-auto text-neutral-700"
        quoteSize={112}
      />
    </Col>
  </Row>
</Section>
