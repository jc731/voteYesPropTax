---
// Basic Contact Form
// ------------
// Description: A basic contact form with fields for first name, last name, email, phone number and message.
// Properties:
// - classes: Additional classes to be added to the block
// ------------

// Components
// - UI
import Card from '../../ui/cards/partials/Card.astro'
import CardBody from '../../ui/cards/partials/CardBody.astro'
import Form from '../../ui/forms/Form.astro'
import FormField from '../../ui/forms/partials/FormField.astro'
import InputField from '../../ui/forms/form-elements/InputField.astro'
import Button from '../../ui/Button.astro'
import SpamField from '../../ui/forms/form-elements/SpamField.astro'

// Props
type Props = {
  classes?: string
  formName?: string
  formId?: string
}
const { classes, formName, formId } = Astro.props
---

<Card classes={classes}>
  <CardBody>
    <Form id={formId} name={formName}>
      <SpamField />
      <h2 class="text-2xl">Fill out the form and we'll get back to you!</h2>
      <FormField>
        <InputField type="text" id="name" label="Name" required value="John Doe" />
        <!-- <InputField type="text" id="lastName" label="Last Name" /> -->
      </FormField>
      <FormField>
        <InputField type="email" id="email" label="Email" value="name@youremail.com" />
      </FormField>
      <FormField>
        <InputField type="tel" id="phone" value="123-456-7890" label="Phone Number" />
      </FormField>
      <Button style="primary" type="submit">Submit</Button>
    </Form>
  </CardBody>
</Card>
